library(data.table)
data <- data.table(
  id = 1:10000000,
  value = rnorm(10000000),
  category = sample(letters[1:5], 10000000, replace=TRUE)
)
fwrite(data, '/tmp/stress_test.csv')
cat('File size:', file.size('/tmp/stress_test.csv') / 1024^3, 'GB\n')
"

